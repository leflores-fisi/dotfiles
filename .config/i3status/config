general {
    colors = true
    interval = 1
    output_format = "i3bar"
    markup = pango
}

order += "ipv6"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

order += "tztime holder__hey_man"

tztime holder__hey_man {
    format = "holder__hey_man"
}

