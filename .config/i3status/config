ethernet _first_ {
    format_up = "%ip"
    format_down = "no ethernet"
}

#battery all {
#   format = "%status %percentage %remaining"
#}

disk "/" {
    format = "%avail"
}

load {
    format = "%1min"
}

memory {
    memory_used_method = "classical"
    format = "%used RAM"
    threshold_degraded = "10%"
    threshold_critical = "5%"
    format_degraded = "%used"
    #prefix_type = "decimal"
}

tztime local {
    format_time = "%a %m/%d %H:%M:%S"
    format = "%time"
}
