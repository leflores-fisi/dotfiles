#}

ethernet _first_ {
    format_up = "🐢 %ip"
    format_down = "🌚 no ethernet"
}

#battery all {
#   format = "%status %percentage %remaining"
#}

disk "/" {
    # format = "%avail"
    format = "<span color='#F3C15E'>%avail</span>"
}

load {
    format = "%1min"
}

memory {
    memory_used_method = "classical"
    threshold_degraded = "25%"
    threshold_critical = "10%"
    format = "%used RAM"
    format_degraded = "%used RAM"
    #prefix_type = "decimal"
}

volume master {
    # format_muted = "♪ muted (%volume)"
    # format = "♪ %volume"
    format = "<span color='#ffab61'>♪ %volume</span>"
    format_muted = "<span color='#CB5858'>♪ muted (%volume)</span>"
    device = "pulse"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    locale = "en_US.UTF-8"
    format = " <span color='#bd9fcf'> %a %m/%d</span> <span color='#bd9fcf'>%H:%M:%S</span>"
    #format = "  %a %-d %b %H:%M:%S"
}
