# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    markup = pango
    color_good = "#b3c059"
    color_degraded = "#f3c15e"
    color_bad = "#f56f6f"
    separator = "="
}

order += "battery all"
order += "wireless _first_"

order += "ethernet _first_"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "🐢 %ip%quality@%essid"
    format_down = "no wifi"
}

ethernet _first_ {
    format_up = "🐢 %ip"
    format_down = ""
}

battery all {
   format = "%status %percentage"
   status_chr = "&gt;w&lt;"
   status_bat = ""
   status_unk = "?"
   status_full = "FULL 😋"
   low_threshold = 20
}

disk "/" {
    # format = "%avail"
    format = "<span color='#f3c15e'>%avail</span>"
}

load {
    format = "%1min"
}

memory {
    memory_used_method = "classical"
    threshold_degraded = "25%"
    threshold_critical = "10%"
    format = "%used RAM"
    format_degraded = "%used RAM"
    #prefix_type = "decimal"
}

volume master {
    # format_muted = "♪ muted (%volume)"
    # format = "♪ %volume"
    format = "<span color='#9ec9e3'>♪ %volume</span>"
    format_muted = "<span color='#f56f6f'>♪ muted (%volume)</span>"
    device = "pulse"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    locale = "en_US.UTF-8"
    format = " <span color='#b6abe3'> %a %d/%m</span> <span color='#b6abe3'>%H:%M:%S</span>"
    #format = "  %a %-d %b %H:%M:%S"
}
